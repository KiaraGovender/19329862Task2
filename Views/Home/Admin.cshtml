@using ACMEINC_19329862.Models;
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>
// View orders from database

<body>
    <h4>Customers</h4>
    <hr />
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Order ID</th>
            <th>User Name</th>
            <th>Product</th>
            <th>Date</th>
        </tr>
        @foreach (Order userOrder in Model)
        {
            <tr>
                <td>@userOrder.OrderId</td>
                <td>@userOrder.User.UserName</td>
                <td>@userOrder.Product.ProductName</td>
                <td>@userOrder.Orderdate</td>
            </tr>
        }
    </table>

    // Display chart of data
    <img src="@Url.Action("GetChartImage")" />
</body>
